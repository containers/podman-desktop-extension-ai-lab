summary: Execute instructlab Playwright E2E tests.
tag:
  - instructlab
duration: 1h
result: custom
framework: shell
test: |
  set +e

  git clone https://github.com/podman-desktop/podman-desktop "$TMT_TREE/podman-desktop"
  export PODMAN_DESKTOP_ARGS="$TMT_TREE/podman-desktop"
  (
    cd "$PODMAN_DESKTOP_ARGS"
    pnpm install
    pnpm build
  )

  (
    cd "$TMT_TREE/tests/playwright"
    pnpm add -D @podman-desktop/tests-playwright@next
  )

  (
    cd "$TMT_TREE"
    pnpm install
    pnpm build
    pnpm test:e2e:instructlab
  )
  
  EXIT_CODE=$?
  bash "$TMT_TREE/tests/tmt/scripts/create-results.sh" "$EXIT_CODE" "instructlab"
